$ ->
  if $('.chicago').length > 0
    $('#facts').infinitescroll({
      navSelector  : ".container nav",
      nextSelector : ".container nav .next a",
      itemSelector : ".list-group-item",
      loading: {
        finishedMsg: null,
        img: '<%= image_path 'chicago-ajax-loader.gif' %>',
        msgText: ''
      },
    })

    $('#facts').infinitescroll 'retrieve'
